@using Dominio;
@model List<Resenia>
@{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Titulo</th>
                <th>Contenido</th>
                <th>Seleccion 1</th>
                <th>Seleccion 2</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (Resenia r in Model)
                {
                    i++;
                        <tr>
                            <td>@i</td>
                            <td>@r.Titulo</td>
                            <td>@r.Contenido</td>
                            
                            @foreach (Seleccion s in r.unPartido.selecciones)
                            {
                                <td>@s.unPais.Nombre</td>
                            }
                        </tr>
                }
            }
        </tbody>
    </table>
}
