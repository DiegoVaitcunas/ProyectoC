@using Dominio
@{
}
@model List<Partido>

<h3>Listado de selecciones ordenadas</h3>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Fechas</th>
            <th>Nombre seleccion 1</th>
            <th>Nombre seleccion 2</th>
        </tr>
    </thead>

    <tbody>
        @{
            int i = 0;

            foreach (Partido p in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@p.Fecha</td>

                    @foreach (Seleccion s in p.selecciones)
                    {
                        <td>@s.unPais.Nombre</td>
                    }
                    <td>@Html.ActionLink("Realizar reseña", "ReseniaView", "Resenia", new { Partido = p.Id })</td>
                </tr>
            }
        }
    </tbody>
</table>
